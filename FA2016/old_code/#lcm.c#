//factorial
#include <FPT.h>
int main()
{
  double a,b,c,x,y,z ;
  cout << "Please Enter Two Positive Integers\n" ;
  cin >> a >> b ;
  cout << "\n" ;
  if (a==0 && b==0){
    cout << "The LCM of 0 and 0 is 0.\n\n" ; 
  }else if (a<0 && b<0){
      cout <<  "I said positive numbers.\n\n";
    }else{
  b=1 ;
  c=2 ;
    while (c<=a){
     b=b*c;
     c=c+1;
     cout << b << "\n";
   }
  cout << "The factorial of " << a << " is " << b << "\n" ;
 }
}
